{
  "mcpServers": {
    "securellm-bridge": {
      "command": "node",
      "args": [
        "/etc/nixos/modules/ml/integrations/mcp/server/build/src/index.js"
      ],
      "env": {
        "PROJECT_ROOT": "/home/kernelcore/dev",
        "KNOWLEDGE_DB_PATH": "/var/lib/mcp-knowledge/knowledge.db",
        "ENABLE_KNOWLEDGE": "true",
        "NIXOS_HOST_NAME": "kernelcore"
      },
      "alwaysAllow": [
        "emergency_status",
        "system_health_check",
        "thermal_check",
        "safe_rebuild_check",
        "rebuild_safety_check"
      ]
    }
  }
}
