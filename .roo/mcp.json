{
  "mcpServers": {
    "securellm-bridge": {
      "command": "node",
      "args": [
        "modules/ml/integrations/mcp/server/src/index.ts"
      ],
      "env": {
        "PROJECT_ROOT": "/etc/nixos",
        "KNOWLEDGE_DB_PATH": "/var/lib/mcp-knowledge/knowledge.db",
        "ENABLE_KNOWLEDGE": "true"
      },
      "alwaysAllow": [
        "emergency_status",
        "system_health_check",
        "thermal_check",
        "safe_rebuild_check",
        "rebuild_safety_check"
      ]
    }
  }
}